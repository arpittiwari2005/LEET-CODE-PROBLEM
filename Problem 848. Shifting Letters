class Solution {
public:
    string shiftingLetters(string s, vector<int>& shifts) {
        int n = shifts.size();
        long long cur = 0;
        vector<long long> act_shifts(n);

        for(int i=n-1; i>=0; i--){
            cur = (cur + shifts[i]) % 26;
            act_shifts[i] = cur;
        }
        for(int i=0; i<n; i++){
            s[i] = 'a' + (s[i] - 'a' + act_shifts[i]) % 26;
        }
        return s;
    }
};
